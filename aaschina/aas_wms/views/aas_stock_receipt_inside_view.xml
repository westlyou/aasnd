<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_tree_aas_stock_receipt_inside" model="ir.ui.view">
            <field name="name">aas.stock.receipt.outside.inside.tree</field>
            <field name="model">aas.stock.receipt</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="order_user"/>
                    <field name="order_time"/>
                    <field name="done_time"/>
                    <field name="state"/>
                    <field name="partner_id"/>
                </tree>
            </field>
        </record>

        <record id="view_form_aas_stock_receipt_inside" model="ir.ui.view">
            <field name="name">aas.stock.receipt.inside.form</field>
            <field name="model">aas.stock.receipt</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_confirm" type="object" string="收货确认" class="oe_highlight" attrs="{'invisible':[('state','!=','draft')]}"/>
                        <button name="action_refresh_push_location" type="object" string="推荐库位" class="oe_highlight"/>
                        <button name="action_cancel" type="object" string="取消收货" class="oe_highlight"
                                attrs="{'invisible':[('state','in',['draft','done','cancel'])]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,receipt,done,cancel"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="id" invisible="1"/>
                                <field name="name" readonly="1"/>
                                <field name="partner_id" options="{'no_create':true}"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="order_user" readonly="1"/>
                                <field name="order_time" readonly="1"/>
                            </group>
                            <group>
                                <field name="receipt_type" readonly="1"/>
                                <field name="done_time" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <button name="action_label_list" string="收货" type="object" icon="fa-list"
                                        attrs="{'invisible':[('state','!=','draft')]}" />
                            </group>
                        </group>
                        <notebook>
                            <page string="收货明细">
                                <field name="receipt_lines" readonly="1">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="product_uom"/>
                                        <field name="product_qty"/>
                                        <field name="receipt_qty"/>
                                        <field name="doing_qty"/>
                                        <field name="label_related"/>
                                        <field name="state"/>
                                        <field name="origin_order"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="receipt_id"/>
                                                <field name="product_id"/>
                                                <field name="product_uom"/>
                                                <field name="label_related"/>
                                            </group>
                                            <group>
                                                <field name="product_qty"/>
                                                <field name="receipt_qty"/>
                                                <field name="doing_qty"/>
                                                <field name="origin_order"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page string="收货标签">
                                <field name="label_lines" readonly="1">
                                    <tree>
                                        <field name="label_id"/>
                                        <field name="product_id"/>
                                        <field name="product_uom"/>
                                        <field name="product_lot"/>
                                        <field name="product_qty"/>
                                        <field name="origin_order"/>
                                        <field name="checked"/>
                                    </tree>
                                    <from>
                                        <group>
                                            <group> <field name="label_id"/> </group>
                                        </group>
                                        <group>
                                            <group>
                                                <field name="product_id"/>
                                                <field name="product_uom"/>
                                                <field name="product_lot"/>
                                            </group>
                                            <group>
                                                <field name="product_qty"/>
                                                <field name="origin_order"/>
                                                <field name="checked"/>
                                            </group>
                                        </group>
                                    </from>
                                </field>
                            </page>
                            <page string="收货作业">
                                <field name="operation_lines" readonly="1">
                                    <tree>
                                        <field name="rlabel_id"/>
                                        <field name="product_id"/>
                                        <field name="product_uom"/>
                                        <field name="product_lot"/>
                                        <field name="product_qty"/>
                                        <field name="location_id"/>
                                        <field name="push_user"/>
                                        <field name="push_time"/>
                                        <field name="push_onshelf"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="rlabel_id"/>
                                            <field name="product_id"/>
                                            <field name="product_uom"/>
                                            <field name="product_lot"/>
                                        </group>
                                        <group>
                                            <field name="location_id"/>
                                            <field name="product_qty"/>
                                            <field name="push_user"/>
                                            <field name="push_time"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page string="执行明细">
                                <field name="move_lines" readonly="1">
                                    <tree>
                                        <field name="product_id"/>
                                        <field name="product_uom"/>
                                        <field name="product_lot"/>
                                        <field name="product_qty"/>
                                        <field name="receipt_time"/>
                                        <field name="receipt_user"/>
                                        <field name="location_src_id"/>
                                        <field name="location_dest_id"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="product_id"/>
                                                <field name="product_uom"/>
                                                <field name="product_lot"/>
                                                <field name="product_qty"/>
                                            </group>
                                            <group>
                                                <field name="receipt_time"/>
                                                <field name="receipt_user"/>
                                                <field name="location_src_id"/>
                                                <field name="location_dest_id"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page string="备注信息">
                                <field name="remark"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="view_tree_aas_stock_receipt_line_inside" model="ir.ui.view">
            <field name="name">aas.stock.receipt.line.inside.tree</field>
            <field name="model">aas.stock.receipt.line</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree create="false" edit="false" delete="false">
                    <field name="product_id"/>
                    <field name="receipt_id"/>
                    <field name="product_uom"/>
                    <field name="product_qty"/>
                    <field name="receipt_qty"/>
                    <field name="doing_qty"/>
                    <field name="origin_order"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_form_aas_stock_receipt_line_inside" model="ir.ui.view">
            <field name="name">aas.stock.receipt.line.inside.form</field>
            <field name="model">aas.stock.receipt.line</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form create="false" delete="false">
                    <header>
                        <button name="action_confirm" type="object" string="收货确认" class="oe_highlight" attrs="{'invisible':[('state','!=','draft')]}"/>
                        <button name="action_refresh_push_location" type="object" string="推荐库位" class="oe_highlight"/>
                        <button name="action_push_all" type="object" string="批量上架" class="oe_highlight"
                                attrs="{'invisible':[('need_push','=',False)]}"/>
                        <button name="action_push_done" type="object" string="确认上架" class="oe_highlight"
                                attrs="{'invisible':[('doing_qty','=',0.0)]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,tocheck,checked,done,cancle"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="product_id" readonly="1"/>
                                <field name="product_uom" readonly="1"/>
                            </group>
                            <group>
                                <field name="product_qty" readonly="1"/>
                                <field name="origin_order" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="id" invisible="1"/>
                                <field name="receipt_qty" readonly="1"/>
                                <field name="doing_qty" readonly="1"/>
                                <field name="receipt_id" invisible="1"/>
                                <field name="need_push" invisible="1"/>
                                <field name="push_location" options="{'no_create':true}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="收货标签">
                                <field name="label_list" readonly="1">
                                    <tree>
                                        <field name="label_id"/>
                                        <field name="product_id"/>
                                        <field name="product_uom"/>
                                        <field name="product_lot"/>
                                        <field name="product_qty"/>
                                        <field name="origin_order"/>
                                        <field name="checked"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group> <field name="label_id"/> </group>
                                        </group>
                                        <group>
                                            <group>
                                                <field name="product_id"/>
                                                <field name="product_uom"/>
                                                <field name="product_lot"/>
                                            </group>
                                            <group>
                                                <field name="product_qty"/>
                                                <field name="origin_order"/>
                                                <field name="checked"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page string="收货作业">
                                <field name="operation_list" attrs="{'readonly':[('need_push','=',False)]}"
                                        context="{'default_location_id': push_location}">
                                    <tree editable="bottom" edit="false">
                                        <field name="rlabel_id" options="{'no_create':true}" required="1"
                                                domain="[('line_id','=',parent.id)]"/>
                                        <field name="product_id" readonly="1"/>
                                        <field name="product_uom" readonly="1"/>
                                        <field name="product_lot" readonly="1"/>
                                        <field name="product_qty" readonly="1"/>
                                        <field name="location_id" required="1" options="{'no_create':true}"/>
                                        <field name="push_user" readonly="1"/>
                                        <field name="push_time" readonly="1"/>
                                        <field name="push_onshelf" readonly="1"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="rlabel_id"/>
                                            <field name="product_id"/>
                                            <field name="product_uom"/>
                                            <field name="product_lot"/>
                                        </group>
                                        <group>
                                            <field name="location_id"/>
                                            <field name="product_qty"/>
                                            <field name="push_user"/>
                                            <field name="push_time"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- 采购收货 -->
        <record id="action_aas_stock_receipt_purchase" model="ir.actions.act_window">
            <field name="name">采购收货</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">aas.stock.receipt</field>
            <field name="limit">50</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="view_tree_aas_stock_receipt_inside"/>
            <field name="search_view_id" ref="view_search_aas_stock_receipt"/>
            <field name="domain">[('receipt_type', '=', 'purchase')]</field>
            <field name="context">{'default_receipt_type': 'purchase'}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create"> 单击添加采购收货</p>
            </field>
        </record>

        <record id="act_view_tree_aas_stock_receipt_purchase" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_tree_aas_stock_receipt_inside"/>
            <field name="act_window_id" ref="action_aas_stock_receipt_purchase"/>
        </record>

        <record id="act_view_form_aas_stock_receipt_purchase" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_form_aas_stock_receipt_inside"/>
            <field name="act_window_id" ref="action_aas_stock_receipt_purchase"/>
        </record>

        <menuitem id="menu_aas_stock_receipt_purchase"  name="采购收货" action="action_aas_stock_receipt_purchase"
                          parent="menu_aas_stock_receipt" sequence="1" groups="stock.group_stock_user,stock.group_stock_manager"/>



        <record id="action_aas_stock_receipt_line_purchase" model="ir.actions.act_window">
            <field name="name">采购明细</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">aas.stock.receipt.line</field>
            <field name="limit">50</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="view_tree_aas_stock_receipt_line_inside"/>
            <field name="search_view_id" ref="view_search_aas_stock_receipt_line"/>
            <field name="domain">[('receipt_type', '=', 'purchase')]</field>
            <field name="context">{'default_receipt_type': 'purchase'}</field>
        </record>

        <record id="act_view_tree_aas_stock_receipt_line_purchase" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_tree_aas_stock_receipt_line_inside"/>
            <field name="act_window_id" ref="action_aas_stock_receipt_line_purchase"/>
        </record>

        <record id="act_view_form_aas_stock_receipt_line_purchase" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_form_aas_stock_receipt_line_inside"/>
            <field name="act_window_id" ref="action_aas_stock_receipt_line_purchase"/>
        </record>

        <menuitem id="menu_aas_stock_receipt_line_purchase"  name="采购明细" action="action_aas_stock_receipt_line_purchase"
                          parent="menu_aas_stock_receipt" sequence="2" groups="stock.group_stock_user,stock.group_stock_manager"/>

