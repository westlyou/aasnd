        <record id="act_view_tree_aas_stock_receipt_sundry" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_tree_aas_stock_receipt_inside"/>
            <field name="act_window_id" ref="action_aas_stock_receipt_sundry"/>
