        <record id="act_view_form_aas_stock_receipt_sundry" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_form_aas_stock_receipt_inside"/>
            <field name="act_window_id" ref="action_aas_stock_receipt_sundry"/>
        </record>

        <menuitem id="menu_aas_stock_receipt_sundry"  name="杂项入库" action="action_aas_stock_receipt_sundry"
                          parent="menu_aas_stock_receipt" sequence="7" groups="stock.group_stock_user,stock.group_stock_manager"/>



        <record id="action_aas_stock_receipt_line_sundry" model="ir.actions.act_window">
            <field name="name">杂项明细</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">aas.stock.receipt.line</field>
            <field name="limit">50</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="view_tree_aas_stock_receipt_line_inside"/>
            <field name="search_view_id" ref="view_search_aas_stock_receipt_line"/>
            <field name="domain">[('receipt_type', '=', 'sundry')]</field>
            <field name="context">{'default_receipt_type': 'sundry'}</field>
        </record>

        <record id="act_view_tree_aas_stock_receipt_line_sundry" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_tree_aas_stock_receipt_line_inside"/>
            <field name="act_window_id" ref="action_aas_stock_receipt_line_sundry"/>
        </record>

        <record id="act_view_form_aas_stock_receipt_line_sundry" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_form_aas_stock_receipt_line_inside"/>
            <field name="act_window_id" ref="action_aas_stock_receipt_line_sundry"/>
        </record>

        <menuitem id="menu_aas_stock_receipt_line_sundry"  name="杂项明细" action="action_aas_stock_receipt_line_sundry"
                          parent="menu_aas_stock_receipt" sequence="8" groups="stock.group_stock_user,stock.group_stock_manager"/>

    </data>
</odoo>