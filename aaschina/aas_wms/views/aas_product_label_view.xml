<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <menuitem id="menu_aas_product_label"  name="标签" parent="stock.menu_stock_root"
                  sequence="1" groups="stock.group_stock_user,stock.group_stock_manager"/>

        <record id="view_tree_aas_product_label" model="ir.ui.view">
            <field name="name">aas.product.label.tree</field>
            <field name="model">aas.product.label</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree create="false" edit="false" delete="false">
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="product_lot"/>
                    <field name="product_qty"/>
                    <field name="date_code"/>
                    <field name="location_id"/>
                    <field name="onshelf_time"/>
                    <field name="stock_date"/>
                    <field name="warranty_date"/>
                    <field name="offshelf_time"/>
                    <field name="origin_order"/>
                    <field name="partner_id"/>
                    <field name="state"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record id="view_form_aas_product_label" model="ir.ui.view">
            <field name="name">aas.product.label.form</field>
            <field name="model">aas.product.label</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form create="false" edit="false" delete="false">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,normal,frozen,over"/>
                    </header>
                    <sheet>
                        <group>
                            <group> <field name="name"/> </group>
                            <group> <field name="barcode" invisible="1"/> </group>
                        </group>
                        <group>
                            <group>
                                <field name="product_id"/>
                                <field name="product_uom"/>
                                <field name="product_lot"/>
                                <field name="product_qty"/>
                                <field name="location_id"/>
                                <field name="locked"/>
                                <field name="locked_order"/>
                                <field name="parent_id"/>
                                <field name="pack_user"/>
                            </group>
                            <group>
                                <field name="origin_id"/>
                                <field name="qualified"/>
                                <field name="stocked"/>
                                <field name="prioritized"/>
                                <field name="customer_code"/>
                                <field name="stock_date"/>
                                <field name="warranty_date"/>
                                <field name="onshelf_time"/>
                                <field name="offshelf_time"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="date_code"/>
                                <field name="origin_order"/>
                                <field name="partner_id"/>
                                <field name="company_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="查存卡">
                                <field name="journal_lines">
                                    <tree>
                                        <field name="location_src_id"/>
                                        <field name="location_dest_id"/>
                                        <field name="journal_qty"/>
                                        <field name="balance_qty"/>
                                        <field name="consume_order"/>
                                        <field name="record_time"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="location_src_id"/>
                                                <field name="location_dest_id"/>
                                                <field name="record_time"/>
                                            </group>
                                            <group>
                                                <field name="journal_qty"/>
                                                <field name="balance_qty"/>
                                                <field name="consume_order"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_search_aas_product_label" model="ir.ui.view">
            <field name="name">aas.product.label.search</field>
            <field name="model">aas.product.label</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="名称" filter_domain="[('name','ilike',self)]"/>
                    <field name="product_id" string="产品" filter_domain="[('product_id','ilike',self)]"/>
                    <field name="product_lot" string="批次" filter_domain="[('product_lot','ilike',self)]"/>
                    <field name="location_id" string="库位" filter_domain="[('location_id','ilike',self)]"/>
                    <field name="date_code" string="DateCode" filter_domain="[('date_code','ilike',self)]"/>
                    <field name="parent_id" string="父标签" filter_domain="[('parent_id','ilike',self)]"/>
                    <field name="origin_id" string="源标签" filter_domain="[('origin_id','ilike',self)]"/>
                    <field name="partner_id" string="业务伙伴" filter_domain="[('partner_id','ilike',self)]"/>
                    <separator/>
                    <filter string="正常" domain="[('state','=','normal')]" />
                    <filter string="冻结" domain="[('state','=','frozen')]" />
                    <filter string="消亡" domain="[('state','=','over')]" />
                    <group expand="0" string="分组">
                        <filter string="产品" context="{'group_by':'product_id'}"/>
                        <filter string="批次" context="{'group_by':'product_lot'}"/>
                        <filter string="库位" context="{'group_by':'location_id'}"/>
                        <filter string="DateCode" context="{'group_by':'date_code'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_aas_product_label" model="ir.actions.act_window">
            <field name="name">产品标签</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">aas.product.label</field>
            <field name="limit">50</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="view_tree_aas_product_label"/>
            <field name="search_view_id" ref="view_search_aas_product_label"/>
        </record>

        <record id="act_view_tree_aas_product_label" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_tree_aas_product_label"/>
            <field name="act_window_id" ref="action_aas_product_label"/>
        </record>

        <record id="act_view_form_aas_product_label" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_form_aas_product_label"/>
            <field name="act_window_id" ref="action_aas_product_label"/>
        </record>

        <menuitem id="menu_aas_product_label_list"  name="产品标签" action="action_aas_product_label"
                          parent="menu_aas_product_label" sequence="1" groups="stock.group_stock_user,stock.group_stock_manager"/>

    </data>
</odoo>