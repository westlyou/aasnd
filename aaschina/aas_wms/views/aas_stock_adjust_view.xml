<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_tree_aas_stock_adjust" model="ir.ui.view">
            <field name="name">aas.stock.adjust.tree</field>
            <field name="model">aas.stock.adjust</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="product_uom"/>
                    <field name="product_lot"/>
                    <field name="location_id"/>
                    <field name="adjustbefore_qty"/>
                    <field name="adjustafter_qty"/>
                    <field name="adjust_time"/>
                    <field name="adjustuser_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_form_aas_stock_adjust" model="ir.ui.view">
            <field name="name">aas.stock.adjust.form</field>
            <field name="model">aas.stock.adjust</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_done" type="object" string="完成调整" class="oe_highlight" states="draft"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                    </header>
                    <sheet>
                        <group>
                            <group colspan="4">
                                <field name="name" attrs="{'readonly':[('state', '=', 'done')]}"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="product_id" options="{'no_create':true}" required="1"
                                        attrs="{'readonly':[('state', '=', 'done')]}"/>
                                <field name="product_uom" readonly="1"/>
                                <field name="product_lot" options="{'no_create':true}" required="1"
                                       domain="[('product_id','=',product_id)]" attrs="{'readonly':[('state', '=', 'done')]}"/>
                                <field name="adjustuser_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="location_id" options="{'no_create':true}" required="1"
                                       domain="[('edgelocation','=',False)]" attrs="{'readonly':[('state', '=', 'done')]}"/>
                                <field name="adjustbefore_qty" readonly="1"/>
                                <field name="adjustafter_qty" required="1" attrs="{'readonly':[('state', '=', 'done')]}"/>
                                <field name="adjust_time" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_search_aas_stock_adjust" model="ir.ui.view">
            <field name="name">aas.stock.adjust.search</field>
            <field name="model">aas.stock.adjust</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="名称" filter_domain="[('name','ilike',self)]"/>
                    <field name="product_id" string="产品" filter_domain="[('product_id','ilike',self)]"/>
                    <field name="product_lot" string="批次" filter_domain="[('product_lot','ilike',self)]"/>
                    <field name="location_id" string="库位" filter_domain="[('location_id','ilike',self)]"/>
                    <field name="adjustuser_id" string="操作人" filter_domain="[('adjustuser_id','ilike',self)]"/>
                    <separator/>
                    <group expand="0" string="分组">
                        <filter string="产品" context="{'group_by':'product_id'}"/>
                        <filter string="批次" context="{'group_by':'product_lot'}"/>
                        <filter string="库位" context="{'group_by':'location_id'}"/>
                        <filter string="操作人" context="{'group_by':'adjustuser_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_aas_stock_adjust" model="ir.actions.act_window">
            <field name="name">库存调整</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">aas.stock.adjust</field>
            <field name="limit">50</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="view_tree_aas_stock_adjust"/>
            <field name="search_view_id" ref="view_search_aas_stock_adjust"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create"> 单击添加库存调整</p>
            </field>
        </record>

        <record id="act_view_tree_aas_stock_adjust" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_tree_aas_stock_adjust"/>
            <field name="act_window_id" ref="action_aas_stock_adjust"/>
        </record>

        <record id="act_view_form_aas_stock_adjust" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_form_aas_stock_adjust"/>
            <field name="act_window_id" ref="action_aas_stock_adjust"/>
        </record>

        <menuitem id="menu_aas_stock_adjust"  name="库存调整" action="action_aas_stock_adjust"
                  parent="stock.menu_aas_stock_inventory" sequence="10" groups="stock.group_stock_manager"/>

    </data>
</odoo>