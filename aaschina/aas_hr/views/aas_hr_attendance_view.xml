<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_tree_aas_hr_attendance" model="ir.ui.view">
            <field name="name">aas.hr.attendance.tree</field>
            <field name="model">aas.hr.attendance</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="work_date"/>
                    <field name="employee_id"/>
                    <field name="time_start"/>
                    <field name="time_finish"/>
                    <field name="work_time"/>
                </tree>
            </field>
        </record>

        <record id="view_form_aas_hr_attendance" model="ir.ui.view">
            <field name="name">aas.hr.attendance.form</field>
            <field name="model">aas.hr.attendance</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group> <field name="employee_id" options="{'no_create':true}"/> </group>
                            <group></group>
                        </group>
                        <group>
                            <group>
                                <field name="time_start"/>
                                <field name="time_finish"/>
                            </group>
                            <group>
                                <field name="work_date" readonly="1"/>
                                <field name="work_time" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_search_aas_hr_attendance" model="ir.ui.view">
            <field name="name">aas.hr.attendance.search</field>
            <field name="model">aas.hr.attendance</field>
            <field name="arch" type="xml">
                <search>
                    <field name="employee_id" string="员工" filter_domain="[('employee_id','ilike',self)]"/>
                    <field name="work_date" string="工作日" filter_domain="[('work_date','=',self)]"/>
                    <group expand="0" string="分组">
                        <filter string="员工" context="{'group_by':'employee_id'}"/>
                        <filter string="工作日" context="{'group_by':'work_date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_aas_hr_attendance" model="ir.actions.act_window">
            <field name="name">员工出勤</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">aas.hr.attendance</field>
            <field name="limit">50</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="view_tree_aas_hr_attendance"/>
            <field name="search_view_id" ref="view_search_aas_hr_attendance"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create"> 单击添加员工出勤</p>
            </field>
        </record>

        <record id="act_view_tree_aas_hr_attendance" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_tree_aas_hr_attendance"/>
            <field name="act_window_id" ref="action_aas_hr_attendance"/>
        </record>

        <record id="act_view_form_aas_hr_attendance" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_form_aas_hr_attendance"/>
            <field name="act_window_id" ref="action_aas_hr_attendance"/>
        </record>

        <menuitem id="menu_aas_hr_attendance"  name="出勤" action="action_aas_hr_attendance"
                  parent="menu_aas_hr_employee" sequence="2"/>

    </data>
</odoo>