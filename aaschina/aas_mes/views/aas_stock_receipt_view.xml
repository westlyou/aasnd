                                    </tree>
                                    <from>
                                        <group>
                                            <group> <field name="label_id"/> </group>
                                        </group>
                                        <group>
                                            <group>
                                                <field name="product_id"/>
                                                <field name="product_uom"/>
                                                <field name="product_lot"/>
                                            </group>
                                            <group>
                                                <field name="product_qty"/>
                                                <field name="origin_order"/>
                                                <field name="checked"/>
                                            </group>
                                        </group>
                                    </from>
                                </field>
                            </page>
                            <page string="备注信息">
                                <field name="remark"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- 生产退料 -->
