<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_tree_aas_mes_workdata_tracing_report_wizard" model="ir.ui.view">
            <field name="name">aas.mes.workdata.tracing.report.wizard.tree</field>
            <field name="model">aas.mes.workdata.tracing.report.wizard</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree create="false" edit="false" delete="false">
                    <field name="master_workorder_id"/>
                    <field name="product_id"/>
                    <field name="master_mesline_id"/>
                    <field name="master_input_qty"/>
                    <field name="master_output_qty"/>
                    <field name="material_id"/>
                    <field name="material_lot"/>
                </tree>
            </field>
        </record>

        <record id="view_form_aas_mes_workdata_tracing_report_wizard" model="ir.ui.view">
            <field name="name">aas.mes.workdata.tracing.report.wizard.form</field>
            <field name="model">aas.mes.workdata.tracing.report.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="master_workorder_id"/>
                                <field name="product_id" options="{'no_open':true}"/>
                            </group>
                            <group>
                                <field name="material_id" options="{'no_open':true}"/>
                                <field name="material_lot" options="{'no_open':true}"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="master_mesline_id" options="{'no_open':true}"/>
                                <field name="master_output_qty"/>
                                <field name="master_input_qty"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_search_aas_mes_workdata_tracing_report_wizard" model="ir.ui.view">
            <field name="name">aas.mes.workdata.tracing.report.wizard.search</field>
            <field name="model">aas.mes.workdata.tracing.report.wizard</field>
            <field name="arch" type="xml">
                <search>
                    <field name="product_id" string="产品" filter_domain="[('product_id','ilike',self)]"/>
                    <field name="material_id" string="原料" filter_domain="[('material_id','ilike',self)]"/>
                    <field name="material_id" string="上级产线" filter_domain="[('master_mesline_id','ilike',self)]"/>
                    <separator/>
                    <group expand="0" string="分组">
                        <filter string="原料" context="{'group_by':'material_id'}"/>
                        <filter string="上级产线" context="{'group_by':'master_mesline_id'}"/>
                    </group>
                </search>
            </field>
        </record>



        <record id="view_form_aas_mes_workdata_forward_tracing_wizard" model="ir.ui.view">
            <field name="name">aas.mes.workdata.forward.tracing.wizard</field>
            <field name="model">aas.mes.workdata.forward.tracing.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="serialnumber"/>
                        </group>
                    </group>
                    <div>
                        <p>请在上面的输入框输入隔离板序列号，追溯生产信息！</p>
                    </div>
                    <footer>
                        <button name="action_done" string="确认" type="object" class="btn-primary"/>
                        <button string="取消" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_aas_mes_workdata_forward_tracing_query_window" model="ir.actions.act_window">
            <field name="name">生产追溯</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">aas.mes.workdata.forward.tracing.wizard</field>
            <field name="limit">50</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_form_aas_mes_workdata_forward_tracing_wizard"/>
        </record>

        <menuitem id="menu_aas_mes_workdata_forward_tracing_query"  name="正向追溯"
                  action="action_aas_mes_workdata_forward_tracing_query_window"
                          parent="menu_aas_mes_workdata_tracing" sequence="1" groups="group_aas_manufacture_user"/>


        <record id="view_form_aas_mes_workdata_reverse_tracing_wizard" model="ir.ui.view">
            <field name="name">aas.mes.workdata.reverse.tracing.wizard</field>
            <field name="model">aas.mes.workdata.reverse.tracing.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="material_id" options="{'no_create':true}"/>
                        </group>
                        <group>
                            <field name="material_lot" options="{'no_create':true}"
                                   domain="[('product_id','=',material_id)]"/>
                        </group>
                    </group>
                    <div>
                        <p>请在上面的输入框输入原料和批次，追溯生产信息！</p>
                    </div>
                    <footer>
                        <button name="action_done" string="确认" type="object" class="btn-primary"/>
                        <button string="取消" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_aas_mes_workdata_reverse_tracing_query_window" model="ir.actions.act_window">
            <field name="name">生产追溯</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">aas.mes.workdata.reverse.tracing.wizard</field>
            <field name="limit">50</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_form_aas_mes_workdata_reverse_tracing_wizard"/>
        </record>

        <menuitem id="menu_aas_mes_workdata_reverse_tracing_query"  name="逆向追溯"
                  action="action_aas_mes_workdata_reverse_tracing_query_window"
                          parent="menu_aas_mes_workdata_tracing" sequence="2" groups="group_aas_manufacture_user"/>


    </data>
</odoo>