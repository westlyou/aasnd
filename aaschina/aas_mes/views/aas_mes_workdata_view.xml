<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_tree_aas_mes_workdata_tracing_report_wizard" model="ir.ui.view">
            <field name="name">aas.mes.workdata.tracing.report.wizard.tree</field>
            <field name="model">aas.mes.workdata.tracing.report.wizard</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree create="false" edit="false" delete="false">
                    <field name="master_workorder_id"/>
                    <field name="product_id"/>
                    <field name="master_mesline_id"/>
                    <field name="master_output_qty"/>
                    <field name="master_input_qty"/>
                    <field name="material_lot"/>
                    <field name="material_id"/>
                </tree>
            </field>
        </record>

        <record id="view_form_aas_mes_workdata_tracing_report_wizard" model="ir.ui.view">
            <field name="name">aas.mes.workdata.tracing.report.wizard.form</field>
            <field name="model">aas.mes.workdata.tracing.report.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="master_workorder_id"/>
                                <field name="product_id"/>
                            </group>
                            <group>
                                <field name="material_id"/>
                                <field name="material_lot"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="master_mesline_id"/>
                                <field name="master_output_qty"/>
                                <field name="master_input_qty"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="view_form_aas_mes_workdata_tracing_wizard" model="ir.ui.view">
            <field name="name">aas.mes.workdata.tracing.wizard</field>
            <field name="model">aas.mes.workdata.tracing.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="serialnumber"/>
                        </group>
                    </group>
                    <div>
                        <p>请在上面的输入框输入隔离板序列号，追溯生产信息！</p>
                    </div>
                    <footer>
                        <button name="action_done" string="确认" type="object" class="btn-primary"/>
                        <button string="取消" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_aas_mes_workdata_tracing_query_window" model="ir.actions.act_window">
            <field name="name">生产追溯</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">aas.mes.workdata.tracing.wizard</field>
            <field name="limit">50</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_form_aas_mes_workdata_tracing_wizard"/>
        </record>

        <menuitem id="menu_aas_mes_workdata_tracing_query"  name="生产追溯" action="action_aas_mes_workdata_tracing_query_window"
                          parent="menu_aas_mes_manufacture" sequence="4" groups="group_aas_manufacture_user"/>


    </data>
</odoo>