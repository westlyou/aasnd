<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_kanban_aas_mes_schedule" model="ir.ui.view">
            <field name="name">aas.mes.schedule.kanban</field>
            <field name="model">aas.mes.schedule</field>
            <field name="arch" type="xml">
                <kanban default_group_by="mesline_id" create="false" edit="false" delete="false"
                        group_create="false" group_edit="false" group_delete="false">
                    <field name="name"/>
                    <field name="sequence"/>
                    <field name="mesline_id"/>
                    <field name="work_start"/>
                    <field name="work_finish"/>
                    <field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_vignette oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <h4> <a type="open" style="font-size:20px;"><field name="name"/></a> </h4>
                                    <ul>
                                        <li>序号：<field name="sequence"/></li>
                                        <li>开始：<field name="work_start" widget="float_time"/></li>
                                        <li>结束: <field name="work_finish" widget="float_time"/></li>
                                        <li>状态: <field name="state"/></li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_tree_aas_mes_schedule" model="ir.ui.view">
            <field name="name">aas.mes.schedule.tree</field>
            <field name="model">aas.mes.schedule</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="mesline_id"/>
                    <field name="name"/>
                    <field name="sequence"/>
                    <field name="work_start" widget="float_time"/>
                    <field name="work_finish" widget="float_time"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_form_aas_mes_schedule" model="ir.ui.view">
            <field name="name">aas.mes.schedule.form</field>
            <field name="model">aas.mes.schedule</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_refresh_actualtime" type="object" string="刷新时间" class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="working,break"/>
                    </header>
                    <sheet>
                        <group>
                            <group><field name="name" required="1"/></group>
                        </group>
                        <group>
                            <group>
                                <field name="mesline_id" required="1" options="{'no_create':true}"/>
                                <field name="work_start" required="1" widget="float_time"/>
                                <field name="actual_start" readonly="1"/>
                            </group>
                            <group>
                                <field name="sequence" required="1"/>
                                <field name="work_finish" required="1" widget="float_time"/>
                                <field name="actual_finish" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_search_aas_mes_schedule" model="ir.ui.view">
            <field name="name">aas.mes.schedule.search</field>
            <field name="model">aas.mes.schedule</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="名称" filter_domain="[('name','ilike',self)]"/>
                    <field name="mesline_id" string="产线" filter_domain="[('mesline_id','ilike',self)]"/>
                    <separator/>
                    <filter string="生产" domain="[('state','=','working')]"/>
                    <filter string="休息" domain="[('state','=','break')]"/>
                    <separator/>
                    <group expand="0" string="分组">
                        <filter string="mesline_id" context="{'group_by':'mesline_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_aas_mes_schedule" model="ir.actions.act_window">
            <field name="name">生产班次</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">aas.mes.schedule</field>
            <field name="limit">50</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_id" ref="view_kanban_aas_mes_schedule"/>
            <field name="search_view_id" ref="view_search_aas_mes_schedule"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create"> 单击添加班次</p>
            </field>
        </record>

        <record id="act_view_kanban_aas_mes_schedule" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="view_kanban_aas_mes_schedule"/>
            <field name="act_window_id" ref="action_aas_mes_schedule"/>
        </record>

        <record id="act_view_tree_aas_mes_schedule" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_tree_aas_mes_schedule"/>
            <field name="act_window_id" ref="action_aas_mes_schedule"/>
        </record>

        <record id="act_view_form_aas_mes_schedule" model="ir.actions.act_window.view">
            <field name="sequence" eval="3"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_form_aas_mes_schedule"/>
            <field name="act_window_id" ref="action_aas_mes_schedule"/>
        </record>

        <menuitem id="menu_aas_mes_schedule"  name="班次" action="action_aas_mes_schedule"
                          parent="menu_aas_mes_resources" sequence="6" groups="group_aas_manufacture_foreman"/>

        <record id="view_tree_aas_mes_workstation" model="ir.ui.view">
            <field name="name">aas.mes.workstation.tree</field>
            <field name="model">aas.mes.workstation</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="station_type"/>
                </tree>
            </field>
        </record>

        <record id="view_form_aas_mes_workstation" model="ir.ui.view">
            <field name="name">aas.mes.workstation.form</field>
            <field name="model">aas.mes.workstation</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group colspan="4">
                                <field name="name" required="1"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="code" required="1"/>
                            </group>
                            <group>
                                <field name="station_type" required="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="员工清单">
                                <field name="employee_lines" readonly="1">
                                    <tree editable="bottom">
                                        <field name="mesline_id"/>
                                        <field name="employee_id"/>
                                        <field name="action_time"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="mesline_id"/>
                                                <field name="employee_id"/>
                                                <field name="action_time"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page string="设备清单">
                                <field name="equipment_lines" readonly="1">
                                    <tree editable="bottom">
                                        <field name="mesline_id"/>
                                        <field name="equipment_id"/>
                                        <field name="action_time"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="mesline_id"/>
                                                <field name="equipment_id"/>
                                                <field name="action_time"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page string="不良模式">
                                <field name="badmode_lines">
                                    <tree editable="bottom">
                                        <field name="name" required="1"/>
                                        <field name="code" required="1"/>
                                        <field name="note"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group> <field name="name" required="1"/> </group>
                                            <group> <field name="code" required="1"/> </group>
                                        </group>
                                        <group>
                                            <group colspan="4"> <field name="note"/> </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_search_aas_mes_workstation" model="ir.ui.view">
            <field name="name">aas.mes.workstation.search</field>
            <field name="model">aas.mes.workstation</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="名称" filter_domain="[('name','ilike',self)]"/>
                    <field name="code" string="编码" filter_domain="[('code','ilike',self)]"/>
                    <separator/>
                    <filter string="扫描工位" domain="[('station_type','=','scanner')]"/>
                    <filter string="工控工位" domain="[('station_type','=','controller')]"/>
                </search>
            </field>
        </record>

        <record id="action_aas_mes_workstation" model="ir.actions.act_window">
            <field name="name">生产工位</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">aas.mes.workstation</field>
            <field name="limit">50</field>
            <field name="view_mode">kanban,form,tree</field>
            <field name="view_id" ref="view_tree_aas_mes_workstation"/>
            <field name="search_view_id" ref="view_search_aas_mes_workstation"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create"> 单击添加生产工位</p>
            </field>
        </record>

        <record id="act_view_tree_aas_mes_workstation" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_tree_aas_mes_workstation"/>
            <field name="act_window_id" ref="action_aas_mes_workstation"/>
        </record>

        <record id="act_view_form_aas_mes_workstation" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_form_aas_mes_workstation"/>
            <field name="act_window_id" ref="action_aas_mes_workstation"/>
        </record>

        <menuitem id="menu_aas_mes_workstation"  name="工位" action="action_aas_mes_workstation"
                          parent="menu_aas_mes_resources" sequence="7" groups="group_aas_manufacture_foreman"/>

        <record id="view_kanban_aas_equipment_equipment_mes" model="ir.ui.view">
            <field name="name">aas.equipment.equipment.aas.kanban</field>
            <field name="model">aas.equipment.equipment</field>
            <field name="inherit_id" ref="aas_equipment.view_kanban_aas_equipment_equipment"/>
            <field name="arch" type="xml">
                <kanban position="attributes">
                    <attribute name="default_group_by">mesline_id</attribute>
                    <attribute name="default_order">state_color</attribute>
                    <attribute name="quick_create">false</attribute>
                </kanban>
                <field name="priority" position="after">
                    <field name="workstation_id"/>
                </field>
                <templates position="replace">
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_vignette">
                                <div class="equipment_kanban_left">
                                    <a type="open"><img t-att-src="kanban_image('aas.equipment.equipment', 'image_small', record.id.value)" class="oe_kanban_image"/></a>
                                    <div t-attf-title="#{record.state.value}" t-attf-class="equipment_status_color_#{record.state_color.raw_value} equipment_status"></div>
                                </div>
                                <div class="oe_kanban_details">
                                    <h4> <a type="open"><field name="code"/></a> </h4>
                                    <ul>
                                        <li>名称: <field name="name"/></li>
                                        <li>状态: <field name="state"/></li>
                                        <li>类别: <field name="category"/></li>
                                        <li>级别: <field name="priority" widget="priority"/></li>
                                        <li>工位：<field name="workstation_id"/></li>
                                        <li>
                                            责任人: <field name="responsible"/>
                                            <img t-att-src="kanban_image('res.users', 'image_small', record.responsible.raw_value)" t-att-title="record.responsible.value" width="24" height="24" class="oe_kanban_avatar"/>
                                        </li>
                                        <li>供应商: <field name="supplier"/></li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </templates>
            </field>
        </record>

        <record id="view_form_aas_equipment_equipment_mes" model="ir.ui.view">
            <field name="name">aas.equipment.equipment.aas.form</field>
            <field name="model">aas.equipment.equipment</field>
            <field name="inherit_id" ref="aas_equipment.view_form_aas_equipment_equipment"/>
            <field name="arch" type="xml">
                <field name="state" position="before">
                    <button name="action_mesline_workstation" type="object" string="产线工位" class="oe_highlight"/>
                </field>
                <field name="purchase_date" position="after">
                    <field name="mesline_id" options="{'no_create':true}" readonly="1"/>
                </field>
                <field name="supplier" position="after">
                    <field name="workstation_id" options="{'no_create':true}" readonly="1"/>
                </field>
            </field>
        </record>

        <record id="view_tree_aas_equipment_equipment_mes" model="ir.ui.view">
            <field name="name">aas.equipment.equipment.aas.tree</field>
            <field name="model">aas.equipment.equipment</field>
            <field name="inherit_id" ref="aas_equipment.view_tree_aas_equipment_equipment"/>
            <field name="arch" type="xml">
                <field name="code" position="before">
                    <field name="mesline_id"/>
                </field>
                <field name="state" position="after">
                    <field name="workstation_id"/>
                </field>
            </field>
        </record>

        <record id="view_search_aas_equipment_equipment_mes" model="ir.ui.view">
            <field name="name">aas.equipment.equipment.aas.search</field>
            <field name="model">aas.equipment.equipment</field>
            <field name="inherit_id" ref="aas_equipment.view_search_aas_equipment_equipment"/>
            <field name="arch" type="xml">
                <search position="replace">
                    <search>
                        <field name="name" string="名称" filter_domain="[('name','ilike',self)]"/>
                        <field name="code" string="编码" filter_domain="[('code','ilike',self)]"/>
                        <field name="mesline_id" string="产线" filter_domain="[('mesline_id','ilike',self)]"/>
                        <field name="workstation_id" string="工位" filter_domain="[('workstation_id','ilike',self)]"/>
                        <field name="category" string="类别" filter_domain="[('category','ilike',self)]"/>
                        <field name="supplier" string="供应商" filter_domain="[('supplier','ilike',self)]"/>
                        <separator/>
                        <filter string="正常设备" domain="[('state','=','normal')]"/>
                        <filter string="测试设备" domain="[('state','=','test')]"/>
                        <filter string="生产设备" domain="[('state','=','produce')]"/>
                        <filter string="维修设备" domain="[('state','=','repair')]"/>
                        <filter string="保养设备" domain="[('state','=','maintain')]"/>
                        <filter string="报废设备" domain="[('active','=',False)]"/>
                        <separator/>
                        <group expand="0" string="分组">
                            <filter string="产线" context="{'group_by':'mesline_id'}"/>
                            <filter string="工位" context="{'group_by':'workstation_id'}"/>
                            <filter string="类别" context="{'group_by':'category'}"/>
                            <filter string="供应商" context="{'group_by':'supplier'}"/>
                        </group>
                    </search>
                </search>
            </field>
        </record>


        <!-- 向导 -->

        <record id="view_form_aas_mes_equipment_workstation_wizard" model="ir.ui.view">
            <field name="name">aas.mes.equipment.workstation.wizard</field>
            <field name="model">aas.mes.equipment.workstation.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="equipment_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="mesline_workstation" required="1" options="{'no_create':true}"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_done" string="确认" type="object" class="btn-primary"/>
                        <button string="取消" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>