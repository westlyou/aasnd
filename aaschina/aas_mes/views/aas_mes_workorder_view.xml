<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_tree_aas_mes_workorder" model="ir.ui.view">
            <field name="name">aas.mes.workorder.tree</field>
            <field name="model">aas.mes.workorder</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree labelprint="true">
                    <field name="name"/>
                    <field name="mesline_id"/>
                    <field name="product_id"/>
                    <field name="product_uom"/>
                    <field name="input_qty"/>
                    <field name="aas_bom_id"/>
                    <field name="routing_id"/>
                    <field name="creator_id"/>
                    <field name="time_create"/>
                    <field name="time_finish"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_form_aas_mes_workorder" model="ir.ui.view">
            <field name="name">aas.mes.workorder.form</field>
            <field name="model">aas.mes.workorder</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form labelprint="true">
                    <header>
                        <button name="action_confirm" type="object" string="确认工单" class="oe_highlight" states="draft"/>
                        <button name="action_producing" type="object" string="开始生产" class="oe_highlight"
                                attrs="{'invisible':['|','|',('mesline_type','=','station'),('isproducing','=',True),('state','in',['draft','done'])]}"/>
                        <button name="action_waitconsume" type="object" string="原料消耗" class="oe_highlight" attrs="{'invisible':[('waitconsume','=',False)]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,producing,pause,done"/>
                    </header>
                    <sheet>
                        <div class="oe_right oe_button_box" style="width: 300px;" name="buttons">
                            <button type="object" name="action_show_outputlabels" class="oe_stat_button" icon="fa-list"
                                    string="标签清单"/>
                            <button type="object" name="action_close" class="oe_stat_button" icon="fa-close"
                                    string="关闭工单" attrs="{'invisible':[('state','not in',['confirm','producing','pause'])]}"/>
                        </div>
                        <group>
                            <group> <field name="name" attrs="{'readonly':[('state','not in',['draft','confirm'])]}"/> </group>
                            <group> <field name="mainorder_id" readonly="1"/> </group>
                        </group>
                        <group>
                            <group>
                                <field name="product_id" options="{'no_create':true}"
                                        attrs="{'readonly':[('state','not in',['draft','confirm'])]}"/>
                                <field name="product_uom" readonly="1"/>
                                <field name="input_qty" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="creator_id" readonly="1"/>
                                <field name="time_create" readonly="1"/>
                                <field name="time_finish" readonly="1"/>
                            </group>
                            <group>
                                <field name="mesline_id" options="{'no_create':true}" required="1"
                                        attrs="{'readonly':[('state','not in',['draft','confirm'])]}"/>
                                <field name="mesline_type" readonly="1"/>
                                <field name="aas_bom_id" options="{'no_create':true}" attrs="{'readonly':[('state','not in',['draft','confirm'])]}"
                                        domain="[('state','=','normal'),('product_id','=',product_id)]"/>
                                <field name="routing_id" readonly="1"/>
                                <field name="produce_start" readonly="1"/>
                                <field name="produce_finish" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="output_manner" attrs="{
                                       'invisible':[('mesline_type','=','flowing')],
                                       'required':[('mesline_type','=','station')],'readonly':[('state','=','done')]}"/>
                                <field name="date_code" readonly="1"/>
                                <field name="output_qty" readonly="1"/>
                                <field name="scrap_qty" readonly="1"/>
                                <field name="closer_id" readonly="1" attrs="{'invisible':[('closer_id','=',False)]}"/>
                                <field name="workcenter_name" readonly="1" string="当前工序"
                                        attrs="{'invisible':[('mesline_type','=','flowing')]}"/>
                                <field name="isproducing" invisible="1"/>
                                <field name="waitconsume" invisible="1"/>
                                <field name="workcenter_start" readonly="1"
                                        attrs="{'invisible':[('mesline_type','=','flowing')]}"/>
                                <field name="workcenter_finish" readonly="1"
                                        attrs="{'invisible':[('mesline_type','=','flowing')]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="成品产出">
                                <field name="product_lines" readonly="1">
                                    <tree>
                                        <field name="schedule_id"/>
                                        <field name="product_id"/>
                                        <field name="product_lot"/>
                                        <field name="product_qty"/>
                                        <field name="waiting_qty"/>
                                        <field name="badmode_qty"/>
                                        <field name="output_date"/>
                                        <field name="container_id"/>
                                        <field name="label_id"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="schedule_id"/>
                                                <field name="product_id"/>
                                                <field name="product_lot"/>
                                            </group>
                                            <group>
                                                <field name="product_qty"/>
                                                <field name="waiting_qty"/>
                                                <field name="badmode_qty"/>
                                            </group>
                                        </group>
                                        <group>
                                            <group>
                                                <field name="output_date"/>
                                                <field name="container_id"/>
                                                <field name="label_id"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page string="消耗明细">
                                <field name="consume_lines" readonly="1">
                                    <tree>
                                        <field name="workcenter_id"/>
                                        <field name="product_id"/>
                                        <field name="material_id"/>
                                        <field name="consume_unit"/>
                                        <field name="input_qty"/>
                                        <field name="consume_qty"/>
                                        <field name="leave_qty"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="workcenter_id"/>
                                            </group>
                                        </group>
                                        <group>
                                            <group>
                                                <field name="product_id"/>
                                                <field name="material_id"/>
                                                <field name="consume_unit"/>
                                            </group>
                                            <group>
                                                <field name="input_qty"/>
                                                <field name="consume_qty"/>
                                                <field name="leave_qty"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page string="工票明细" attrs="{'invisible':[('mesline_type','=','flowing')]}">
                                <field name="workticket_lines" readonly="1">
                                    <tree>
                                        <field name="sequence"/>
                                        <field name="workcenter_id"/>
                                        <field name="input_qty"/>
                                        <field name="output_qty"/>
                                        <field name="time_wait"/>
                                        <field name="time_start"/>
                                        <field name="time_finish"/>
                                        <field name="badmode_qty"/>
                                        <field name="state"/>
                                    </tree>
                                    <form>
                                        <header>
                                            <field name="state" widget="statusbar" statusbar_visible="draft,waiting,producing,pause,done"/>
                                        </header>
                                        <sheet>
                                            <group>
                                                <group>
                                                    <field name="sequence"/>
                                                    <field name="workcenter_id"/>
                                                    <field name="input_qty"/>
                                                    <field name="output_qty"/>
                                                </group>
                                                <group>
                                                    <field name="time_wait"/>
                                                    <field name="time_start"/>
                                                    <field name="time_finish"/>
                                                    <field name="badmode_qty"/>
                                                </group>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                            <page string="不良明细">
                                <field name="badmode_lines" readonly="1">
                                    <tree>
                                        <field name="product_id"/>
                                        <field name="badmode_id"/>
                                        <field name="badmode_qty"/>
                                        <field name="workstation_id"/>
                                        <field name="workticket_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_search_aas_mes_workorder" model="ir.ui.view">
            <field name="name">aas.mes.workorder.search</field>
            <field name="model">aas.mes.workorder</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="名称" filter_domain="[('name','ilike',self)]"/>
                    <field name="mesline_id" string="产线" filter_domain="[('mesline_id','ilike',self)]"/>
                    <field name="product_id" string="产品" filter_domain="[('product_id','ilike',self)]"/>
                    <field name="aas_bom_id" string="BOM" filter_domain="[('aas_bom_id','ilike',self)]"/>
                    <field name="routing_id" string="工艺" filter_domain="[('routing_id','ilike',self)]"/>
                    <field name="creator_id" string="创建人" filter_domain="[('creator_id','ilike',self)]"/>
                    <field name="wireorder_id" string="线材工单" filter_domain="[('wireorder_id','ilike',self)]"/>
                    <separator/>
                    <filter name="nowireorder" string="非线材工单" domain="[('wireorder_id', '=', False)]"/>
                    <separator/>
                    <group expand="0" string="分组">
                        <filter string="产线" context="{'group_by':'mesline_id'}"/>
                        <filter string="产品" context="{'group_by':'product_id'}"/>
                        <filter string="BOM" context="{'group_by':'aas_bom_id'}"/>
                        <filter string="工艺" context="{'group_by':'routing_id'}"/>
                        <filter string="创建人" context="{'group_by':'creator_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_aas_mes_workorder" model="ir.actions.act_window">
            <field name="name">子工单</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">aas.mes.workorder</field>
            <field name="limit">50</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="view_tree_aas_mes_workorder"/>
            <field name="search_view_id" ref="view_search_aas_mes_workorder"/>
            <field name="context">{'search_default_nowireorder': 1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create"> 单击添加工单</p>
            </field>
        </record>

        <record id="act_view_tree_aas_mes_workorder" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_tree_aas_mes_workorder"/>
            <field name="act_window_id" ref="action_aas_mes_workorder"/>
        </record>

        <record id="act_view_form_aas_mes_workorder" model="ir.actions.act_window.view">
            <field name="sequence" eval="3"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_form_aas_mes_workorder"/>
            <field name="act_window_id" ref="action_aas_mes_workorder"/>
        </record>

        <menuitem id="menu_aas_mes_workorder"  name="子工单" action="action_aas_mes_workorder"
                          parent="menu_aas_mes_manufacture" sequence="2" groups="group_aas_manufacture_user,group_aas_manufacture_planner"/>


        <!-- 向导 -->

        <record id="view_form_aas_mes_workorder_producing_wizard" model="ir.ui.view">
            <field name="name">aas.mes.workorder.producing.wizard</field>
            <field name="model">aas.mes.workorder.producing.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="workorder_id" readonly="1"/>
                        </group>
                    </group>
                    <div>
                        <field name="action_message" readonly="1"/>
                    </div>
                    <footer>
                        <button name="action_done" string="确认" type="object" class="btn-primary"/>
                        <button string="取消" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="view_form_aas_mes_workorder_close_wizard" model="ir.ui.view">
            <field name="name">aas.mes.workorder.close.wizard</field>
            <field name="model">aas.mes.workorder.close.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="workorder_id" readonly="1"/>
                        </group>
                    </group>
                    <div>
                        <field name="action_message" readonly="1"/>
                    </div>
                    <footer>
                        <button name="action_done" string="确认" type="object" class="btn-primary"/>
                        <button string="取消" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>