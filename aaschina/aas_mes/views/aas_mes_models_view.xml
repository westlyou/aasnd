<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_tree_product_template_mes" model="ir.ui.view">
            <field name="name">product.template.mes.tree</field>
            <field name="model">product.template</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="default_code" string="物料编码"/>
                    <field name="name"/>
                    <field name="uom_id"/>
                    <field name="categ_id"/>
                    <field name="type"/>
                </tree>
            </field>
        </record>

        <record id="view_form_product_template_mes" model="ir.ui.view">
            <field name="name">product.template.mes.form</field>
            <field name="model">product.template</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="image_medium" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <label class="oe_edit_only" for="name" string="名称"/>
                            <h1><field name="name" placeholder="产品名称"/></h1>
                            <div name="options" groups="base.group_user">
                                <div>
                                    <field name="sale_ok"/>
                                    <label for="sale_ok"/>
                                </div>
                                <div>
                                    <field name="purchase_ok"/>
                                    <label for="purchase_ok"/>
                                </div>
                            </div>
                        </div>
                        <group>
                            <group>
                                <field name="default_code" string="物料编码" required="1"/>
                                <field name="uom_id" options="{'no_create':true}"/>
                                <field name="uom_po_id" invisible="1"/>
                                <field name="tracking"/>
                                <field name="type"/>
                                <field name="categ_id" string="内部分类" options="{'no_create':true}"/>
                                <field name="customer_product_code"/>
                            </group>
                            <group>
                                <field name="need_warranty"/>
                                <field name="stock_age"/>
                                <field name="virtual_material"/>
                                <field name="split_qty"/>
                                <field name="product_yield"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_search_product_template_mes" model="ir.ui.view">
            <field name="name">product.template.mes.search</field>
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <search>
                    <field name="default_code" string="编码" filter_domain="[('default_code','ilike',self)]"/>
                    <field name="name" string="名称" filter_domain="[('name','ilike',self)]"/>
                    <separator/>
                    <filter string="虚拟物料" domain="[('virtual_material','=',True)]" />
                </search>
            </field>
        </record>

        <record id="action_product_template_mes" model="ir.actions.act_window">
            <field name="name">产品</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.template</field>
            <field name="limit">50</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="view_tree_product_template_mes"/>
            <field name="search_view_id" ref="view_search_product_template_mes"/>
        </record>

        <record id="act_view_tree_product_template_mes" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_tree_product_template_mes"/>
            <field name="act_window_id" ref="action_product_template_mes"/>
        </record>

        <record id="act_view_form_product_template_mes" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_form_product_template_mes"/>
            <field name="act_window_id" ref="action_product_template_mes"/>
        </record>

        <menuitem id="menu_product_template_mes"  name="产品" action="action_product_template_mes"
                          parent="menu_aas_mes_resources" sequence="1" groups="group_aas_manufacture_user"/>


        <menuitem id="menu_aas_product_label_mes"  name="标签" action="aas_wms.action_aas_product_label"
                          parent="menu_aas_mes_resources" sequence="2" groups="group_aas_manufacture_user"/>

        <record id="view_tree_aas_mes_line" model="ir.ui.view">
            <field name="name">aas.mes.line.tree</field>
            <field name="model">aas.mes.line</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="line_type"/>
                    <field name="workorder_id"/>
                    <field name="schedule_id"/>
                </tree>
            </field>
        </record>

        <record id="view_form_aas_mes_line" model="ir.ui.view">
            <field name="name">aas.mes.line.form</field>
            <field name="model">aas.mes.line</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_allocate_employee" string="分配员工" type="object" class="oe_highlight" groups="aas_mes.group_aas_manufacture_foreman"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="line_type" required="1"/>
                                <field name="schedule_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="isautoswitch"/>
                                <field name="refresh_time" readonly="1"/>
                                <field name="workorder_id" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="location_production_id" options="{'no_create':true}" required="1"
                                       domain="[('edgelocation','=',True)]"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="原料库位">
                                <field name="location_material_list" required="1">
                                    <tree editable="bottom">
                                        <field name="location_id" options="{'no_create':true}" required="1"
                                            domain="[('edgelocation','=',True)]"/>
                                        <field name="location_note"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="location_id" options="{'no_create':true}" required="1"
                                                    domain="[('edgelocation','=',True)]"/>
                                            </group>
                                            <group>
                                                <field name="location_note"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page string="工位清单">
                                <field name="workstation_lines">
                                    <tree editable="bottom">
                                        <field name="sequence" required="1"/>
                                        <field name="workstation_id" required="1" options="{'no_create':true}"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="sequence" required="1"/>
                                            </group>
                                            <group>
                                                <field name="workstation_id" required="1" options="{'no_create':true}"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page string="员工清单">
                                <field name="employees" readonly="1">
                                    <tree>
                                        <field name="code"/>
                                        <field name="name"/>
                                        <field name="gender"/>
                                        <field name="state"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="code"/>
                                                <field name="name"/>
                                            </group>
                                            <group>
                                                <field name="gender"/>
                                                <field name="state"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_search_aas_mes_line" model="ir.ui.view">
            <field name="name">aas.mes.line.search</field>
            <field name="model">aas.mes.line</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="名称" filter_domain="[('name','ilike',self)]"/>
                    <field name="location_production_id" string="成品库位" filter_domain="[('location_production_id','ilike',self)]"/>
                    <field name="workorder_id" string="当前工单" filter_domain="[('workorder_id','ilike',self)]"/>
                    <field name="schedule_id" string="当前班次" filter_domain="[('schedule_id','ilike',self)]"/>
                </search>
            </field>
        </record>

        <record id="action_aas_mes_line" model="ir.actions.act_window">
            <field name="name">生产线</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">aas.mes.line</field>
            <field name="limit">50</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="view_tree_aas_mes_line"/>
            <field name="search_view_id" ref="view_search_aas_mes_line"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create"> 单击添加生产线</p>
            </field>
        </record>

        <record id="act_view_tree_aas_mes_line" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_tree_aas_mes_line"/>
            <field name="act_window_id" ref="action_aas_mes_line"/>
        </record>

        <record id="act_view_form_aas_mes_line" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_form_aas_mes_line"/>
            <field name="act_window_id" ref="action_aas_mes_line"/>
        </record>

        <menuitem id="menu_aas_mes_line"  name="产线" action="action_aas_mes_line"
                          parent="menu_aas_mes_resources" sequence="3" groups="group_aas_manufacture_foreman"/>


        <record id="view_kanban_aas_hr_employee_mes" model="ir.ui.view">
            <field name="name">aas.hr.employee.mes.kanban</field>
            <field name="model">aas.hr.employee</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state"
                        create="false" edit="false" delete="false"
                        group_create="false" group_edit="false" group_delete="false">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="state"/>
                    <field name="state_color"/>
                    <field name="mesline_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_vignette oe_kanban_global_click">
                                <div class="employee_kanban_left">
                                    <a type="open"><img t-att-src="kanban_image('aas.hr.employee', 'image_small', record.id.raw_value)" class="oe_kanban_image" width="90" height="90"/></a>
                                    <div t-attf-title="#{record.state.value}" t-attf-class="employee_status_color_#{record.state_color.raw_value} employee_status"></div>
                                </div>
                                <div class="oe_kanban_details">
                                    <h4> <a type="open" style="font-size:20px;"><field name="name"/></a> </h4>
                                    <ul>
                                        <li>工号: <field name="code"/></li>
                                        <li>状态: <field name="state"/></li>
                                        <li>产线: <field name="mesline_id"/></li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_tree_aas_hr_employee_mes" model="ir.ui.view">
            <field name="name">aas.hr.employee.mes.tree</field>
            <field name="model">aas.hr.employee</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree create="false" edit="false" delete="false" labelprint="true">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="gender"/>
                    <field name="mesline_id"/>
                    <field name="schedule_id"/>
                    <field name="entry_time"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_form_aas_hr_employee_mes" model="ir.ui.view">
            <field name="name">aas.hr.employee.mes.form</field>
            <field name="model">aas.hr.employee</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form create="false" edit="false" delete="false" labelprint="true">
                    <header>
                        <button name="action_allocate_mesline" string="分配产线" type="object" class="oe_highlight" groups="aas_mes.group_aas_manufacture_foreman"/>
                        <field name="state" widget="statusbar" statusbar_visible="working,leave,atop,vacation,dimission"/>
                    </header>
                    <sheet>
                        <field name="image_small" widget="image" class="oe_avatar oe_left" options="{'size': [90, 90]}"/>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="gender"/>
                                <field name="entry_time"/>
                            </group>
                            <group>
                                <field name="code"/>
                                <field name="mesline_id"/>
                                <field name="schedule_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="产线调整">
                                <field name="meslines" readonly="1">
                                    <tree>
                                        <field name="mesline_id"/>
                                        <field name="action_user"/>
                                        <field name="action_time"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="mesline_id"/>
                                            </group>
                                            <group>
                                                <field name="action_user"/>
                                                <field name="action_time"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_search_aas_hr_employee_mes" model="ir.ui.view">
            <field name="name">aas.hr.employee.search</field>
            <field name="model">aas.hr.employee</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="名称" filter_domain="[('name','ilike',self)]"/>
                    <field name="code" string="工号" filter_domain="[('code','ilike',self)]"/>
                    <field name="mesline_id" string="产线" filter_domain="[('mesline_id','ilike',self)]"/>
                    <field name="schedule_id" string="班次" filter_domain="[('schedule_id','ilike',self)]"/>
                    <separator/>
                    <filter string="工作" domain="[('state','=','working')]" />
                    <filter string="离开" domain="[('state','=','leave')]" />
                    <filter string="事假" domain="[('state','=','atop')]" />
                    <filter string="休假" domain="[('state','=','vacation')]" />
                    <group expand="0" string="分组">
                        <filter string="状态" context="{'group_by':'state'}"/>
                        <filter string="性别" context="{'group_by':'gender'}"/>
                        <filter string="产线" context="{'group_by':'mesline_id'}"/>
                        <filter string="班次" context="{'group_by':'schedule_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_aas_hr_employee_mes" model="ir.actions.act_window">
            <field name="name">员工</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">aas.hr.employee</field>
            <field name="limit">50</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_id" ref="view_kanban_aas_hr_employee_mes"/>
            <field name="search_view_id" ref="view_search_aas_hr_employee_mes"/>
            <field name="domain">[('state','!=','dimission')]</field>
        </record>

        <record id="act_view_kanban_aas_hr_employee_mes" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="view_kanban_aas_hr_employee_mes"/>
            <field name="act_window_id" ref="action_aas_hr_employee_mes"/>
        </record>

        <record id="act_view_tree_aas_hr_employee_mes" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_tree_aas_hr_employee_mes"/>
            <field name="act_window_id" ref="action_aas_hr_employee_mes"/>
        </record>

        <record id="act_view_form_aas_hr_employee_mes" model="ir.actions.act_window.view">
            <field name="sequence" eval="3"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_form_aas_hr_employee_mes"/>
            <field name="act_window_id" ref="action_aas_hr_employee_mes"/>
        </record>

        <menuitem id="menu_aas_hr_employee_employee_mes"  name="员工" action="action_aas_hr_employee_mes"
                  parent="menu_aas_mes_resources" sequence="5" groups="group_aas_manufacture_foreman"/>


        <record id="view_tree_aas_stock_inventory_mes" model="ir.ui.view">
            <field name="name">aas.stock.inventory.mes.tree</field>
            <field name="model">aas.stock.inventory</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="mesline_id"/>
                    <field name="name" />
                    <field name="product_id"/>
                    <field name="create_user"/>
                    <field name="create_time"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_form_aas_stock_inventory_mes" model="ir.ui.view">
            <field name="name">aas.stock.inventory.mes.form</field>
            <field name="model">aas.stock.inventory</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_confirm" states="draft" type="object" string="确认盘点" class="oe_highlight"/>
                        <button name="action_done" states="confirm" type="object" string="完成盘点" class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done"/>
                    </header>
                    <sheet>
                        <group>
                            <group> <field name="name" attrs="{'readonly':[('state', '!=', 'draft')]}" required="1"/> </group>
                        </group>
                        <group>
                            <group>
                                <field name="mesline_id" options="{'no_create':true}" required="1" attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                                <field name="product_id" options="{'no_create':true}" attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                            </group>
                            <group>
                                <field name="create_user" readonly="1"/>
                                <field name="create_time" readonly="1"/>
                            </group>

                        </group>
                        <group>
                            <group>
                                <field name="id" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="盘点明细">
                                <field name="inventory_lines" readonly="1">
                                    <tree editable="bottom">
                                        <field name="location_id"/>
                                        <field name="product_id"/>
                                        <field name="product_lot"/>
                                        <field name="stock_qty"/>
                                        <field name="actual_qty"/>
                                        <field name="differ_qty"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="盘点标签">
                                <field name="inventory_labels" attrs="{'readonly':[('state', '!=', 'confirm')]}">
                                    <tree editable="bottom" edit="false">
                                        <field name="label_id" options="{'no_create':true}" required="1"/>
                                        <field name="product_id" readonly="1"/>
                                        <field name="product_lot" readonly="1"/>
                                        <field name="product_qty" readonly="1"/>
                                        <field name="location_id" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="标签调整">
                                <field name="inventory_adjust" attrs="{'readonly':[('state', '!=', 'confirm')]}">
                                    <tree editable="bottom" edit="false">
                                        <field name="inventory_label" options="{'no_create':true}"
                                               domian="[('inventory_id','=',parent.id)]" required="1"/>
                                        <field name="product_id" readonly="1"/>
                                        <field name="location_id" readonly="1"/>
                                        <field name="product_lot" readonly="1"/>
                                        <field name="adjust_before_qty" readonly="1"/>
                                        <field name="adjust_after_qty" required="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="盘盈盘亏">
                                <field name="inventory_moves" readonly="1">
                                    <tree>
                                        <field name="product_id"/>
                                        <field name="product_lot"/>
                                        <field name="product_qty"/>
                                        <field name="location_src_id"/>
                                        <field name="location_dest_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_search_aas_stock_inventory_mes" model="ir.ui.view">
            <field name="name">aas.stock.inventory.mes.search</field>
            <field name="model">aas.stock.inventory</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="名称" filter_domain="[('name','ilike',self)]"/>
                    <field name="product_id" string="产品" filter_domain="[('product_id','ilike',self)]"/>
                    <field name="mesline_id" string="产线" filter_domain="[('mesline_id','ilike',self)]"/>
                    <separator/>
                    <group expand="0" string="分组">
                        <filter string="产品" context="{'group_by':'product_id'}"/>
                        <filter string="产线" context="{'group_by':'mesline_id'}"/>
                    </group>
                </search>
            </field>
        </record>

